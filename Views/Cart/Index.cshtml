@model List<BBURGERClone.Models.CartItem>

<h1>Your Cart</h1>

@if (!Model.Any())
{
    <p>Your cart is empty.</p>
}
else
{
    <table>
        <thead><tr><th>Item</th><th>Qty</th><th>Price</th><th>Total</th><th></th></tr></thead>
        <tbody>
            @foreach (var it in Model)
            {
                <tr>
                    <td>@it.Product?.Name</td>
                    <td>@it.Quantity</td>
                    <td>₹@String.Format("{0:0.00}", it.Product?.Price)</td>
                    <td>₹@String.Format("{0:0.00}", it.LineTotal)</td>
                    <td>
                        <form asp-controller="Cart" asp-action="Remove" method="post">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="productId" value="@it.ProductId" />
                            <button type="submit">Remove</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <p>Subtotal: ₹@Model.Sum(i => i.LineTotal)</p>
    <a asp-controller="Checkout" asp-action="Payment" class="btn">Proceed to checkout</a>
}
