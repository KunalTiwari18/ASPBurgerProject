@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "Offers";
}

<h1>Current Offers</h1>

<div style="display:grid;grid-template-columns:repeat(auto-fill,minmax(220px,1fr));gap:16px;">
    @foreach (var o in Model)
    {
        <div style="background:#fff;padding:16px;border-radius:8px;box-shadow:0 6px 18px rgba(0,0,0,0.06)">
            <h3>@o.Title</h3>
            <p>Use code: <strong>@o.Code</strong></p>
            <p><a asp-controller="Home" asp-action="Index" class="btn">Order Now</a></p>
        </div>
    }
</div>
